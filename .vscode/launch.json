    "version": "0.2.0",
    "configurations": [
{
  "type": "node",
  "request": "attach",
  "name": "Attach",
  "port": 5858
},
      {
        "type": "chrome",
        "request": "launch",
        "userDataDir": "${workspaceRoot}/.vscode/chrome",
        "name": "Launch Chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceRoot}"
      },
      {
          "type": "node",
          "protocol": "inspector",
          "request": "launch",
          "name": "Launch Program",
          "program": "${workspaceRoot}/server/server.js"
      },
      {
            "name": "Attach",
            "trace": true,
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}"
        }
    ],
    "compounds": [
        {
            "name": "Debug in Chrome",
            "configurations": [
                "Launch Program",
                "Launch Chrome",
                "Attach"
            ]
        }
    ]
}